<h1 class="ui center aligned header">Welcome to MessageMe - <em>a complete Chat App</em></h1>

<h2 class="ui center aligned icon header">
  <i class="circular power off icon orange"></i>
  Log in to continue
</h2>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">

      <%= form_for(:sessions, html: { class: "ui form", role: "form" }, url: login_path) do |form| %>
        <div class="field">
          <%= form.label :username %>
          <div class="ui left icon input">
            <%= form.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= form.label :password %>
          <div class="ui left icon input">
            <%= form.password_field :password %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= form.submit("Login", class: "ui orange submit button") %>        
      <% end %>

    </div>

    <div class="middle aligned column">
      <div class="ui big button orange">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>